extends layout

block content
  h1 Welcome to my Color Changer
  form(method="POST" action="/")
    input(type="color" name="colorPicker" id="picker" value=`${color}`)
    br
    label(for="picker") Click Me!
    br
    input(type="color" name="text" id="textPicker" value=`${textColor}`)
    br
    label(for="textPicker") Click Me Too!
    br
    button(type="submit") Submit
  form(method="POST" action="/random")
    button(type="submit") Random

